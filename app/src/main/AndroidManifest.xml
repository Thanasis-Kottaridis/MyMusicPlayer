<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mymusicplayer.kottarido.unipi.mymusicplayer">

    <!-- permission to let music playback continue when the user's device becomes idle -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- permision gia reead external storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MySongsActivity"
            android:label="My Songs"
            android:theme="@style/AppTheme_ActionBar" />
        <activity
            android:name=".SetUpProfileActivity"
            android:label="Set Up Application"
            android:theme="@style/AppTheme_ActionBar" />
        <activity
            android:name=".FavoriteActivity"
            android:label="Favorite Songs"
            android:theme="@style/AppTheme_ActionBar"
            />
    </application>

</manifest>